{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "treasuryRisk",
  "description": "Composite treasury risk score (0-100).",
  "type": "object",
  "properties": {
    "key": { "const": "treasuryRisk" },
    "label": { "type": "string", "const": "Treasury Risk" },
    "unit": { "type": "string", "const": "score" },
    "category": { "type": "string", "const": "risk" },
    "source": { "type": "object", "properties": { "type": { "enum": ["derived"] } }, "required": ["type"] },
    "computation": { "type": "object", "properties": { "method": { "type": "string", "const": "weighted(concentrationRisk, volatilityRisk, stablecoinCoverage, runway)" }, "dependencies": { "type": "array", "items": { "type": "string" }, "default": ["assetBreakdown", "valueChange30d"] } } }
  },
  "required": ["key", "label", "unit", "category", "source"]
}

