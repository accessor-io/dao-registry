{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "averageVotingPower",
  "description": "Average voting power per member for a DAO.",
  "type": "object",
  "properties": {
    "key": { "const": "averageVotingPower" },
    "label": { "type": "string", "const": "Average Voting Power" },
    "unit": { "type": "string", "const": "token_units" },
    "category": { "type": "string", "const": "governance" },
    "source": {
      "type": "object",
      "properties": {
        "type": { "enum": ["derived"] },
        "onChain": { "type": "object", "properties": { "snapshotBalances": { "type": "string" } } }
      },
      "required": ["type"]
    },
    "computation": {
      "type": "object",
      "properties": {
        "method": { "type": "string", "const": "sum(votingPower[address]) / totalMembers" },
        "dependencies": { "type": "array", "items": { "type": "string" }, "default": ["totalMembers"] }
      }
    },
    "examples": { "type": "array", "items": { "type": "number" } }
  },
  "required": ["key", "label", "unit", "category", "source"]
}

