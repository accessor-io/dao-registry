{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "memberRisk",
  "description": "Member-related risk score (0-100), reflecting centralization and inactivity.",
  "type": "object",
  "properties": {
    "key": { "const": "memberRisk" },
    "label": { "type": "string", "const": "Member Risk" },
    "unit": { "type": "string", "const": "score" },
    "category": { "type": "string", "const": "risk" },
    "source": { "type": "object", "properties": { "type": { "enum": ["derived"] } }, "required": ["type"] },
    "computation": { "type": "object", "properties": { "method": { "type": "string", "const": "weighted(1/avg(votingPower), 100 - votingParticipationRate)" }, "dependencies": { "type": "array", "items": { "type": "string" }, "default": ["averageVotingPower", "votingParticipationRate"] } } }
  },
  "required": ["key", "label", "unit", "category", "source"]
}

