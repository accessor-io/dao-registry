{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "proposalRisk",
  "description": "Risk associated with proposal pipeline (0-100), combining failure, cancel, and low quorum rates.",
  "type": "object",
  "properties": {
    "key": { "const": "proposalRisk" },
    "label": { "type": "string", "const": "Proposal Risk" },
    "unit": { "type": "string", "const": "score" },
    "category": { "type": "string", "const": "risk" },
    "source": { "type": "object", "properties": { "type": { "enum": ["derived"] } }, "required": ["type"] },
    "computation": { "type": "object", "properties": { "method": { "type": "string", "const": "weighted(failureRate, cancelRate, 100 - quorumMetRate)" }, "dependencies": { "type": "array", "items": { "type": "string" }, "default": ["quorumMet"] } } }
  },
  "required": ["key", "label", "unit", "category", "source"]
}

