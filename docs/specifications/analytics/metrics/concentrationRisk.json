{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "concentrationRisk",
  "description": "Risk from asset concentration (0-100). Higher when top assets dominate portfolio.",
  "type": "object",
  "properties": {
    "key": { "const": "concentrationRisk" },
    "label": { "type": "string", "const": "Concentration Risk" },
    "unit": { "type": "string", "const": "score" },
    "category": { "type": "string", "const": "risk" },
    "source": { "type": "object", "properties": { "type": { "enum": ["derived"] } }, "required": ["type"] },
    "computation": { "type": "object", "properties": { "method": { "type": "string", "const": "scaled(HHI(assetBreakdown.percentages))" }, "dependencies": { "type": "array", "items": { "type": "string" }, "default": ["assetBreakdown"] } } }
  },
  "required": ["key", "label", "unit", "category", "source"]
}

