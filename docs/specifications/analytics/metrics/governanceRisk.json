{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "governanceRisk",
  "description": "Composite governance risk score (0-100).",
  "type": "object",
  "properties": {
    "key": { "const": "governanceRisk" },
    "label": { "type": "string", "const": "Governance Risk" },
    "unit": { "type": "string", "const": "score" },
    "category": { "type": "string", "const": "risk" },
    "source": { "type": "object", "properties": { "type": { "enum": ["derived"] } }, "required": ["type"] },
    "computation": { "type": "object", "properties": { "method": { "type": "string", "const": "weighted(quorumMetRate, participationRate, proposalSuccessRate, parameters)" }, "dependencies": { "type": "array", "items": { "type": "string" }, "default": ["participationRate", "quorumMet"] } } }
  },
  "required": ["key", "label", "unit", "category", "source"]
}

